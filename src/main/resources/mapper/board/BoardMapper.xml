<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.prcjsp.mapper.BoardMapper">
    <select id="getBoard" resultType="board">
        SELECT *
        FROM board
        WHERE del_yn = 'N'
        ORDER BY id DESC
        LIMIT 10
    </select>

    <insert id="write" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO board
        (
            title,
            content,
            board_type,
            reg_user_name
        )
        VALUES
        (
            #{title},
            #{content},
            #{boardType},
            #{regUserName}
        )
    </insert>
</mapper>